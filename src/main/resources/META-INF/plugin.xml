<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.katjanakosic.jetbrainshackatum24</id>
    <name>HackaTUM-24</name>
    <vendor>katjanakosic</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.katjanakosic.jetbrainshackatum24.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
        
        <toolWindow id="Voice Assistant"
                    factoryClass="com.github.katjanakosic.jetbrainshackatum24.VoiceAssistantToolWindowFactory"
                    anchor="bottom"
                    icon="AllIcons.CodeWithMe.CwmEnableCall"/>
        <toolWindow id="Generated Unit Tests"
                    factoryClass="com.github.katjanakosic.jetbrainshackatum24.UnitTestToolWindowFactory"
                    anchor="bottom"
                    icon="AllIcons.Toolwindows.ToolWindowStructure"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.katjanakosic.jetbrainshackatum24.listeners.MyApplicationActivationListener" topic="com.intellij.openapi.application.ApplicationActivationListener"/>
    </applicationListeners>
    <actions>
        <action id="com.github.katjanakosic.jetbrainshackatum24.VoiceAssistant"
                class="com.github.katjanakosic.jetbrainshackatum24.VoiceAssistant" text="Voice Assistant" icon="AllIcons.CodeWithMe.CwmMicOn">
            <add-to-group group-id="MainToolbarRight" anchor="first"/>
        </action>
        <action id="com.github.katjanakosic.jetbrainshackatum24.UnitTestGenerator"
                class="com.github.katjanakosic.jetbrainshackatum24.UnitTestGenerator" text="Generate Unit Test" icon="AllIcons.Toolwindows.ToolWindowStructure">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <action id="com.github.katjanakosic.jetbrainshackatum24.CodeExplainer"
                class="com.github.katjanakosic.jetbrainshackatum24.CodeExplainer" text="Ask Chat for Help!" icon="AllIcons.Debugger.Question_badge">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="meta alt G"/>
        </action>
    </actions>
</idea-plugin>
